<div class="m-media-block {{styleModifier}}">
	<div class="m-media-block__image-wrapper">
		<img class="m-media-block__image" src="{{imgSrc}}" alt="{{imgAlt}}">
	</div>

	<div class="m-media-block__content">
		<h4 class="{{headline.class}}">{{headline.text}}</h4>

		{{#description}}
			<p class="m-media-block__description">{{description}}</p>
		{{/description}}

		{{#cta}}
			<!-- @NOTE: Review at a later point to determine best practice -->
			<a class="m-media-block__cta" href="{{cta.link}}">{{> atoms-secondary-button(secondaryBtnText: "{{cta.text}}")}}</a>
		{{/cta}}
	</div>
</div>
